<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xuecheng.manage_course.dao.TeachPlanMapper" >
        <resultMap id="BaseResultMap" type="com.xuecheng.framework.domain.course.Teachplan" >
            <id column="id" property="id" jdbcType="VARCHAR" />
            <result column="pname" property="pname" jdbcType="VARCHAR" />
            <result column="parentid" property="parentid" jdbcType="VARCHAR" />
            <result column="grade" property="grade" jdbcType="CHAR" />
            <result column="ptype" property="ptype" jdbcType="CHAR" />
            <result column="description" property="description" jdbcType="VARCHAR" />
            <result column="timelength" property="timelength" jdbcType="DOUBLE" />
            <result column="courseid" property="courseid" jdbcType="VARCHAR" />
            <result column="orderby" property="orderby" jdbcType="VARCHAR" />
            <result column="status" property="status" jdbcType="CHAR" />
            <result column="trylearn" property="trylearn" jdbcType="CHAR" />
        </resultMap>

        <sql id="Base_Column_List" >
            `id`,`pname`,`parentid`,`grade`,`ptype`,`description`,`timelength`,`courseid`,`orderby`,`status`,`trylearn`
        </sql>

    <select id="getTeachPlanListByCourseId" resultType="com.xuecheng.framework.domain.course.Teachplan" parameterType="java.lang.String">
        SELECT

        <include refid="Base_Column_List"/>

        FROM `teachplan`  AS t1

        <if test="_parameter!=null and _parameter!=''">
            WHERE t1.`courseid`=#{courseid,jdbcType=VARCHAR}
        </if>
        ;
    </select>

</mapper>
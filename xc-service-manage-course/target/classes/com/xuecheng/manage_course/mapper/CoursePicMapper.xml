<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xuecheng.manage_course.mapper.CoursePicMapper">
    <resultMap id="BaseResultMap" type="com.xuecheng.framework.domain.course.CoursePic" >
        <id column="courseid" property="courseid" jdbcType="VARCHAR" />
        <result column="pic" property="pic" jdbcType="VARCHAR" />
    </resultMap>

    <sql id="Base_Column_List" >
       `courseid`, `pic`
   </sql>

    <insert id="saveCoursePic" parameterType="com.xuecheng.framework.domain.course.CoursePic" >
        INSERT INTO `xc_course`.`course_pic` (`courseid`, `pic`)
        VALUES
        ( #{courseid,jdbcType=VARCHAR},  #{pic,jdbcType=VARCHAR}) ;
    </insert>
    <delete id="deleteCoursePicByCourseid">
        DELETE
        FROM
        `xc_course`.`course_pic`
        WHERE `courseid` = #{courseid,jdbcType=VARCHAR} ;
    </delete>

    <select id="selectCoursePicByCourseId" resultType="com.xuecheng.framework.domain.course.CoursePic" parameterType="string">
        SELECT
        `courseid`,
        `pic`
        FROM
        `xc_course`.`course_pic`
        WHERE `courseid`=#{courseid,jdbcType=VARCHAR};
    </select>


    <update id="updateCoursePic" parameterType="com.xuecheng.framework.domain.course.CoursePic">
        UPDATE
        `xc_course`.`course_pic`
        SET
        `pic` = #{pic,jdbcType=VARCHAR}
        WHERE `courseid` = #{courseid,jdbcType=VARCHAR}
        ;
    </update>
</mapper>